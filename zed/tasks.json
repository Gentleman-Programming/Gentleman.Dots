[
  {
    "label": "Lazygit",
    "command": "lazygit -p $ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "target": "center"
  },
  {
    "label": "Yazi",
    "command": "ya_zed",
    "args": ["$ZED_FILE"],
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "File Finder",
    "command": "zed \"$(tv files -I -t f)\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "Find in Files",
    "command": "zed \"$(tv text)\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  }
]
