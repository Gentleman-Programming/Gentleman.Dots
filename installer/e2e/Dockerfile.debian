# Debian with sh (no bash by default for user)
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    ca-certificates \
    procps \
    && rm -rf /var/lib/apt/lists/*

RUN useradd -m -s /bin/sh testuser
USER testuser
WORKDIR /home/testuser

COPY --chown=testuser:testuser gentleman-installer-linux-amd64 /usr/local/bin/gentleman-dots
USER root
RUN chmod +x /usr/local/bin/gentleman-dots
USER testuser

CMD ["gentleman-dots"]
